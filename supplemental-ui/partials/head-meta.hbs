{{!-- Custom head metadata for PDF downloads --}}
<meta name="pdf-download-timestamp" content="{{page.attributes.page-pdf-download-timestamp}}">

{{!-- Force PDF downloads instead of opening in browser --}}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Find all PDF download links and ensure they download instead of opening
    const pdfLinks = document.querySelectorAll('a[href$=".pdf"]');
    pdfLinks.forEach(link => {
      // Change the href to point to the assembler location
      if (link.href.includes('microprofile-tutorial.pdf')) {
        link.href = '/assembler/microprofile-tutorial/6.1/microprofile-tutorial.pdf';
      }
      // Add download attribute to force download
      if (!link.hasAttribute('download')) {
        link.setAttribute('download', '');
      }
    });
  });
</script>

